# Development Environment Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration - Using in-memory database for development
MONGODB_URI=mongodb://127.0.0.1:27017/uniapply-hub-dev
MONGODB_TEST_URI=mongodb://127.0.0.1:27017/uniapply-hub-test

# JWT Configuration
JWT_ACCESS_SECRET=dev-super-secure-access-secret-key-min-32-characters-long-for-development-only
JWT_REFRESH_SECRET=dev-super-secure-refresh-secret-key-min-32-characters-long-for-development-only
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=demo-cloud
CLOUDINARY_API_KEY=demo-api-key
CLOUDINARY_API_SECRET=demo-api-secret
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Email Configuration - Disabled for development
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=securepass123
ADMIN_EMAIL=admin@uniapplyhub.com

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# Logging
LOG_LEVEL=info